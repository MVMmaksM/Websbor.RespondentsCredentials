<Window x:Class="Websbor.RespondentsCredentials.View.ExecuteSqlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Websbor.RespondentsCredentials.View"
        mc:Ignorable="d"
        Title="ExecuteSqlWindow" Height="724" Width="800" Background="#086499">
    <Grid Margin="0,0,0,-6" UseLayoutRounding="True">
        <Border BorderThickness="0,2,0,0" Background="#086499" BorderBrush="#48b9fa" Grid.ColumnSpan="2" Height="25" VerticalAlignment="Bottom">
            <StackPanel Margin="0,611,-576,0">
                <StatusBar Height="23"/>
            </StackPanel>
        </Border>
        <GroupBox Header="Запросы" Margin="0,82,0,553" FontFamily="Arial" FontWeight="Bold" Foreground="#FFFBFBFB" BorderBrush="#9cdbff">
            <Grid Height="61">
                <Button Click="CreateSelectQuery_Click" Content="Select" Height="25" Width="150" Margin="10,9,0,9" Foreground="WhiteSmoke" BorderBrush="#086499" FontWeight="Bold" Background="#48b9fa" HorizontalAlignment="Left">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="290" ShadowDepth="3" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
                <Button Content="Update" Click="CreateUpdateQuery_Click" Height="25" Width="150" Margin="206,12,0,10" Foreground="WhiteSmoke" BorderBrush="#086499" FontWeight="Bold" Background="#48b9fa" HorizontalAlignment="Left">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="290" ShadowDepth="3" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
                <Button Content="Delete" Click="CreateDeleteQuery_Click" Height="25" Width="150" Margin="412,12,226,10" Foreground="WhiteSmoke" BorderBrush="#086499" FontWeight="Bold" Background="#48b9fa">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="290" ShadowDepth="3" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
                <Button Content="Insert" Click="CreateInsertQuery_Click"  Height="25" Width="150" Margin="628,12,10,10" Foreground="WhiteSmoke" BorderBrush="#086499" FontWeight="Bold" Background="#48b9fa">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="290" ShadowDepth="3" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Header="Редактор запроса" Margin="0,166,0,340" FontFamily="Arial" FontWeight="Bold" Foreground="#FFFBFBFB" BorderBrush="#9cdbff">
            <TextBox Height="184"/>
        </GroupBox>
        <GroupBox Header="Результат" Margin="0,374,0,83" FontFamily="Arial" FontWeight="Bold" Foreground="#FFFBFBFB" BorderBrush="#9cdbff">
            <DataGrid CanUserAddRows="False" AutoGenerateColumns="True" Background="#ebf8ff" VerticalGridLinesBrush="#c0c1c2" HorizontalGridLinesBrush="#c0c1c2" BorderBrush="#9cdbff"/>
        </GroupBox>
        <Button Content="Выполнить" Click="ExecuteSql_Click" Height="25" Width="150" Margin="309,648,341,41" Foreground="WhiteSmoke" BorderBrush="#086499" FontWeight="Bold" Background="#48b9fa">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="Black" Direction="290" ShadowDepth="3" Opacity="0.6"/>
            </Button.Effect>
        </Button>
        <GroupBox Header="Настройки подключения" Margin="0,10,0,637" FontFamily="Arial" FontWeight="Bold" Foreground="#FFFBFBFB" BorderBrush="#9cdbff">
            <Grid>
                <Label Content="Сервер:" Height="25" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="64" Foreground="#FFFBFBFB"/>
                <TextBox HorizontalAlignment="Left" Height="25" Margin="79,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="293"/>
                <Label Height="25" Content="База данных:" HorizontalAlignment="Left" Margin="394,0,0,0" VerticalAlignment="Center" Width="97" Foreground="#FFFBFBFB"/>
                <TextBox Height="25" HorizontalAlignment="Left" Margin="496,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="282"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
